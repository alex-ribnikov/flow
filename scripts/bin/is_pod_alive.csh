#!/bin/csh


####################################################################################################################################
##   $1 is POD name
####################################################################################################################################

set pod = `nextk8s list -pod $1 | grep $1 | grep -v "list pods for namespace" | cat`
if ("$pod" == "") then
    echo "-I- Pod $1 is dead"
    exit 0
endif 

echo "-I- Pod $1 is alive"
exit 1
